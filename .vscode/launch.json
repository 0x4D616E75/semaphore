{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cli/main.go",
            "args": ["server", "--config", ".devcontainer/config.json"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/venv/bin/python"
            }
        }
    ]
}